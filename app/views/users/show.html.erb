<%= render "template/header" %>

<div class="album py-5 bg-light">
  <div class="container">
    <div class = "items-sell-title"><%= @nickname %>さんの投稿一覧</div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% @tweets.each do |tweet| %>
      <div class="col pb-4">
        <div class="card shadow-sm">
          <%= image_tag tweet.image %>
          <div class="card-body">
            <p class="card-text">
              <%= tweet.title %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to "Show", tweet_path(tweet.id), class: "btn btn-sm btn-outline-secondary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>

  </div>
</div>
