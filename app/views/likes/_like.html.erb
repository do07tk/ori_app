<% if user_signed_in? && tweet.liked_by?(current_user)%>
  <%=link_to "❤️", tweet_like_path(tweet, tweet.likes.find_by(user: current_user).id), method: :delete, class: "btn btn-sm btn-outline-secondary", style: "color: red; border-radius: 5px;", remote: true %>
<% else %>
  <%=link_to "♡", tweet_likes_path(tweet.id), method: :post, class: "btn btn-sm btn-outline-secondary", style: "border-radius: 5px;", remote: true %>
<% end %>
